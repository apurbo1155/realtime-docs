{
  "builds": [
    {
      "src": "package.json",
      "use": "@railway/node"
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "MONGODB_URI": {
      "description": "MongoDB connection string",
      "required": true
    },
    "PORT": {
      "description": "Port to run the application",
      "value": "8000"
    }
  }
}